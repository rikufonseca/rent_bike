<%= link_to bike_path(bike), class: 'bike-button' do %>
  <% bike.photos.each do |photo| %>
    <%= image_tag photo %>
  <% end %>
  <div class="bike-info-on-map">
    <p class="m-0"><%= bike.bike_type %></p>
    <p><%= bike.price_per_day %>$ / week </p>
    <p class="m-0"><%= bike.address %></p>
  </div>
<% end %>
